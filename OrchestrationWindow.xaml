<Window x:Class="AIA.OrchestrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AIA"
        xmlns:models="clr-namespace:AIA.Models.AI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="AI Orchestration Settings" 
        Height="700" Width="950"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:NullToVisibilityConverter x:Key="NullToVis"/>
        
        <ObjectDataProvider x:Key="AIProviderTypeValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:AIProviderType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Bot20" FontSize="24" Foreground="#0078D4" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AI Orchestration" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Configure AI providers and routing settings" Foreground="#999999" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="8" Background="Transparent">
            <!-- Providers Tab -->
            <TabItem Header="Providers">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Providers List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Add Provider Button -->
                        <Border Margin="8" Padding="8" CornerRadius="6" Background="#333337">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="AI Providers" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <ui:Button Grid.Column="1" Padding="8,4" Click="BtnAddProvider">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon Symbol="Add12" Foreground="White" FontSize="12"/>
                                        <TextBlock Text="Add" Foreground="White" FontSize="12" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </ui:Button>
                            </Grid>
                        </Border>
                        
                        <!-- Providers ListView -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8,0,8,8">
                            <ItemsControl x:Name="ProvidersListControl" ItemsSource="{Binding Providers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,4" CornerRadius="6" Cursor="Hand"
                                                MouseLeftButtonUp="ProviderItem_Click" Tag="{Binding}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#2D2D30"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3E3E42"/>
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid Margin="10,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Provider Icon -->
                                                <Border Width="32" Height="32" CornerRadius="6" Margin="0,0,10,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding ProviderColor}" Opacity="0.2"/>
                                                    </Border.Background>
                                                    <ui:SymbolIcon FontSize="16">
                                                        <ui:SymbolIcon.Foreground>
                                                            <SolidColorBrush Color="{Binding ProviderColor}"/>
                                                        </ui:SymbolIcon.Foreground>
                                                        <ui:SymbolIcon.Style>
                                                            <Style TargetType="ui:SymbolIcon">
                                                                <Setter Property="Symbol" Value="Bot20"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ProviderType}" Value="AzureOpenAI">
                                                                        <Setter Property="Symbol" Value="Cloud20"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ProviderType}" Value="Google">
                                                                        <Setter Property="Symbol" Value="Globe20"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ProviderType}" Value="Anthropic">
                                                                        <Setter Property="Symbol" Value="BrainCircuit20"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ui:SymbolIcon.Style>
                                                    </ui:SymbolIcon>
                                                </Border>
                                                
                                                <!-- Provider Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                                        <Border Margin="6,0,0,0" Padding="4,1" CornerRadius="4" Background="#331EB75F"
                                                                Visibility="{Binding IsDefault, Converter={StaticResource BoolToVis}}">
                                                            <TextBlock Text="Default" FontSize="9" Foreground="#1EB75F"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock Foreground="#999999" FontSize="11" Margin="0,2,0,0">
                                                        <Run Text="{Binding ProviderType}"/>
                                                        <Run Text=" - "/>
                                                        <Run Text="{Binding ModelId}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <!-- Enabled Toggle -->
                                                <CheckBox Grid.Column="2" IsChecked="{Binding IsEnabled}" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    
                    <!-- Splitter -->
                    <GridSplitter Grid.Column="1" Width="4" Background="#3E3E42" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                    
                    <!-- Provider Details -->
                    <Border Grid.Column="2" Margin="8" CornerRadius="8" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1">
                        <Grid>
                            <!-- No Provider Selected -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Visibility="{Binding SelectedProvider, Converter={StaticResource NullToVis}, ConverterParameter=Inverse}">
                                <ui:SymbolIcon Symbol="Bot20" FontSize="48" Foreground="#666666"/>
                                <TextBlock Text="Select a provider to configure" Foreground="#666666" Margin="0,12,0,0" FontSize="14"/>
                            </StackPanel>
                            
                            <!-- Provider Details Form -->
                            <ScrollViewer Visibility="{Binding SelectedProvider, Converter={StaticResource NullToVis}}"
                                          VerticalScrollBarVisibility="Auto" Padding="16">
                                <StackPanel DataContext="{Binding SelectedProvider}">
                                    <!-- Header with actions -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="Provider Configuration" FontSize="16" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                                        
                                        <ui:Button Grid.Column="1" Padding="8,4" Margin="0,0,8,0" Click="BtnTestProvider" ToolTip="Test connection">
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon Symbol="Play12" Foreground="White" FontSize="12"/>
                                                <TextBlock Text="Test" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </ui:Button>
                                        
                                        <ui:Button Grid.Column="2" Padding="8,4" Margin="0,0,8,0" Click="BtnSetDefault">
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon Symbol="Star12" Foreground="#FFA500" FontSize="12"/>
                                                <TextBlock Text="Set Default" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </ui:Button>
                                        
                                        <ui:Button Grid.Column="3" Padding="8,4" Background="#33FF4444" Click="BtnDeleteProvider">
                                            <ui:SymbolIcon Symbol="Delete12" Foreground="#FF4444" FontSize="12"/>
                                        </ui:Button>
                                    </Grid>
                                    
                                    <!-- Provider Type -->
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Provider Type" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                        <ComboBox SelectedItem="{Binding ProviderType, Mode=TwoWay}"
                                                  ItemsSource="{Binding Source={StaticResource AIProviderTypeValues}}"
                                                  Background="#3E3E42" Foreground="White" BorderBrush="#555555"/>
                                    </StackPanel>
                                    
                                    <!-- Name -->
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Display Name" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                                    </StackPanel>
                                    
                                    <!-- API Key -->
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="API Key" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                        <PasswordBox x:Name="ApiKeyInput" 
                                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"
                                                     PasswordChanged="ApiKeyInput_PasswordChanged"/>
                                    </StackPanel>
                                    
                                    <!-- Endpoint (Azure only) -->
                                    <StackPanel Margin="0,0,0,12" Visibility="{Binding RequiresEndpoint, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="Endpoint URL" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding Endpoint, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                                    </StackPanel>
                                    
                                    <!-- Deployment Name (Azure only) -->
                                    <StackPanel Margin="0,0,0,12" Visibility="{Binding RequiresDeploymentName, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="Deployment Name" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding DeploymentName, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                                    </StackPanel>
                                    
                                    <!-- Model ID -->
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Model ID" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding ModelId, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                                            <ComboBox x:Name="ModelSuggestionsCombo" Grid.Column="1" Width="150" Margin="8,0,0,0"
                                                      Background="#3E3E42" Foreground="White" BorderBrush="#555555"
                                                      SelectionChanged="ModelSuggestion_Selected">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" FontSize="11"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Priority -->
                                    <StackPanel Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Routing Priority" Foreground="#999999" FontSize="11"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Priority}" Foreground="#CCCCCC" FontSize="11"/>
                                        </Grid>
                                        <Slider Minimum="0" Maximum="100" Value="{Binding Priority}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Strengths -->
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Strengths (comma-separated: coding, creative, analysis, math, research, conversation)" 
                                                   Foreground="#999999" FontSize="11" Margin="0,0,0,4" TextWrapping="Wrap"/>
                                        <TextBox Text="{Binding StrengthsText, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                                    </StackPanel>
                                    
                                    <!-- Max Context Tokens -->
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Max Context Tokens" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding MaxContextTokens, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                                    </StackPanel>
                                    
                                    <!-- Enabled Toggle -->
                                    <Border Padding="12,10" CornerRadius="6" Background="#3E3E42" Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Enabled" Foreground="White" VerticalAlignment="Center"/>
                                            <CheckBox Grid.Column="1" IsChecked="{Binding IsEnabled}"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Test Result -->
                                    <Border x:Name="TestResultBorder" Visibility="Collapsed" Padding="12,10" CornerRadius="6" Margin="0,0,0,12">
                                        <TextBlock x:Name="TestResultText" TextWrapping="Wrap" FontSize="12"/>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        <!-- Routing Settings -->
                        <TextBlock Text="Routing" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Automatic Routing" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Automatically select the best AI provider based on prompt content" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableAutoRouting}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Tool Settings -->
                        <TextBlock Text="Tools (MCP-like)" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Enable Tool Use" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Allow AI to use tools to access tasks, reminders, and data bank" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableToolUse}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Context Settings -->
                        <TextBlock Text="Context Inclusion" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Include Tasks in System Prompt" Foreground="White"/>
                                <CheckBox Grid.Column="1" IsChecked="{Binding Settings.IncludeTasksContext}"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Include Reminders in System Prompt" Foreground="White"/>
                                <CheckBox Grid.Column="1" IsChecked="{Binding Settings.IncludeRemindersContext}"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Include Selected Data Bank Category" Foreground="White"/>
                                <CheckBox Grid.Column="1" IsChecked="{Binding Settings.IncludeDataBankContext}"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Include Current Screenshots" Foreground="White"/>
                                <CheckBox Grid.Column="1" IsChecked="{Binding Settings.IncludeScreenshotsContext}"/>
                            </Grid>
                        </Border>
                        
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Max Context Items per Category" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Settings.MaxContextItems, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <!-- Generation Settings -->
                        <TextBlock Text="Generation Defaults" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Margin="0,0,8,0">
                                <TextBlock Text="Temperature" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Settings.DefaultTemperature, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Max Tokens" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Settings.DefaultMaxTokens, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tools Tab -->
            <TabItem Header="Available Tools">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <TextBlock Text="AI Tools" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
                        <TextBlock Text="These tools are available to the AI when tool use is enabled. The AI can call these tools to access and manage your data." 
                                   Foreground="#999999" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,16"/>
                        
                        <ItemsControl x:Name="ToolsListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,4" Padding="12,10" CornerRadius="6" Background="#2D2D30">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon Symbol="Wrench20" Foreground="#0078D4" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="White" FontSize="13"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Row="1" Text="{Binding Description}" Foreground="#999999" FontSize="11" 
                                                       TextWrapping="Wrap" Margin="22,4,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Foreground="#999999" FontSize="11" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Padding="16,8" Margin="0,0,8,0" Click="BtnSave">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save16" Foreground="White" FontSize="14"/>
                            <TextBlock Text="Save" Foreground="White" FontWeight="SemiBold" Margin="6,0,0,0"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Padding="16,8" Click="BtnClose">
                        <TextBlock Text="Close" Foreground="White"/>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
