<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!-- 
    Plugin Templates Resource Dictionary
    
    Note: Plugin-specific DataTemplates should be provided by each plugin assembly.
    The plugin system will load templates from the plugin's resources at runtime.
    
    This file can contain shared styles and templates that plugins can use.
    -->

    <!-- Shared style for plugin tab headers -->
    <Style x:Key="PluginTabHeaderStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <!-- Shared style for plugin toolbar buttons -->
    <Style x:Key="PluginToolbarButtonStyle" TargetType="ui:Button">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Default plugin content template (used when plugin doesn't provide its own) -->
    <DataTemplate x:Key="DefaultPluginTabTemplate">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:SymbolIcon Symbol="Puzzle20" FontSize="48" Foreground="#666666"/>
                <TextBlock Text="Plugin content loading..." Foreground="#666666" Margin="0,12,0,0" FontSize="14" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
