<UserControl x:Class="AIA.Views.Automation.HotkeyTriggerConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AIA"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <StackPanel>
        <!-- Hotkey Capture -->
        <TextBlock Text="{local:Localize Automation_Trigger_Hotkey}" Foreground="#999999" FontSize="11" Margin="0,8,0,4"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="HotkeyTextBox" 
                     Text="{Binding HotkeyString, Mode=OneWay}"
                     IsReadOnly="True"
                     Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"
                     PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                     GotFocus="HotkeyTextBox_GotFocus"
                     LostFocus="HotkeyTextBox_LostFocus"
                     ToolTip="Click and press your desired hotkey combination"/>
            <ui:Button Grid.Column="1" Margin="4,0,0,0" Padding="8,6" Click="BtnClearHotkey"
                       ToolTip="Clear hotkey">
                <ui:SymbolIcon Symbol="Dismiss12" Foreground="White" FontSize="12"/>
            </ui:Button>
        </Grid>
        
        <TextBlock Text="{local:Localize Automation_Trigger_HotkeyHelp}" 
                   Foreground="#666666" FontSize="10" Margin="0,4,0,0" TextWrapping="Wrap"/>
        
        <!-- Status -->
        <Border x:Name="StatusBorder" Margin="0,12,0,0" Padding="8" CornerRadius="4" 
                Background="#332D2D30" Visibility="Collapsed">
            <TextBlock x:Name="StatusText" Foreground="#999999" FontSize="11"/>
        </Border>
        
        <!-- Debounce -->
        <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{local:Localize Automation_Trigger_Debounce}" Foreground="#999999" FontSize="11" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox Text="{Binding DebounceMsec, UpdateSourceTrigger=PropertyChanged}" 
                         Width="80" Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"/>
                <TextBlock Text="ms" Foreground="#999999" VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
