<UserControl x:Class="AIA.Views.Automation.AutomationChainTriggerConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AIA"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="400">
    <StackPanel>
        <!-- Source Automation -->
        <TextBlock Text="{local:Localize Automation_Trigger_SourceAutomation}" Foreground="#999999" FontSize="11" Margin="0,8,0,4"/>
        <ComboBox x:Name="SourceAutomationCombo"
                  ItemsSource="{Binding AvailableAutomations}"
                  SelectedValue="{Binding SourceAutomationId, Mode=TwoWay}"
                  SelectedValuePath="Id"
                  DisplayMemberPath="Name"
                  Background="#2D2D30" Foreground="White" BorderBrush="#555555"/>
        
        <TextBlock Text="{local:Localize Automation_Trigger_ChainHelp}" 
                   Foreground="#666666" FontSize="10" Margin="0,4,0,0" TextWrapping="Wrap"/>
        
        <!-- Require Success -->
        <CheckBox Content="{local:Localize Automation_Trigger_RequireSuccess}" 
                  IsChecked="{Binding RequireSuccess, Mode=TwoWay}"
                  Foreground="White" Margin="0,16,0,0"
                  ToolTip="Only trigger when the source automation completes successfully"/>
        
        <!-- Chain Visualization -->
        <Border Margin="0,16,0,0" Padding="12,8" CornerRadius="4" Background="#222D2D30">
            <StackPanel Orientation="Horizontal">
                <Border Padding="8,4" CornerRadius="4" Background="#3E3E42">
                    <TextBlock x:Name="SourceNameText" Text="Source Automation" Foreground="#0078D4" FontSize="11"/>
                </Border>
                <ui:SymbolIcon Symbol="ArrowRight12" Foreground="#666666" FontSize="12" Margin="8,0"/>
                <Border Padding="8,4" CornerRadius="4" Background="#3E3E42">
                    <TextBlock Text="This Automation" Foreground="#1EB75F" FontSize="11"/>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
