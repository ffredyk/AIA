<UserControl x:Class="AIA.Views.Automation.FileChangeTriggerConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AIA"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="400">
    <StackPanel>
        <!-- Watch Path -->
        <TextBlock Text="{local:Localize Automation_Trigger_WatchPath}" Foreground="#999999" FontSize="11" Margin="0,8,0,4"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding WatchPath, UpdateSourceTrigger=PropertyChanged}"
                     Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"/>
            <ui:Button Grid.Column="1" Margin="4,0,0,0" Padding="8,6" Click="BtnBrowseFolder"
                       ToolTip="Browse for folder">
                <ui:SymbolIcon Symbol="FolderOpen20" Foreground="White" FontSize="14"/>
            </ui:Button>
        </Grid>
        
        <!-- File Filter -->
        <TextBlock Text="{local:Localize Automation_Trigger_FileFilter}" Foreground="#999999" FontSize="11" Margin="0,12,0,4"/>
        <TextBox Text="{Binding FileFilter, UpdateSourceTrigger=PropertyChanged}"
                 Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"
                 ToolTip="File pattern like *.txt, *.json, or *.*"/>
        
        <!-- Include Subdirectories -->
        <CheckBox Content="{local:Localize Automation_Trigger_IncludeSubdirs}" 
                  IsChecked="{Binding IncludeSubdirectories, Mode=TwoWay}"
                  Foreground="White" Margin="0,12,0,0"/>
        
        <!-- Change Types -->
        <TextBlock Text="{local:Localize Automation_Trigger_ChangeTypes}" Foreground="#999999" FontSize="11" Margin="0,12,0,4"/>
        <WrapPanel Margin="0,4,0,0">
            <CheckBox Content="Created" IsChecked="{Binding IsCreatedChecked, Mode=TwoWay}" Foreground="White" Margin="0,0,16,4"/>
            <CheckBox Content="Modified" IsChecked="{Binding IsModifiedChecked, Mode=TwoWay}" Foreground="White" Margin="0,0,16,4"/>
            <CheckBox Content="Deleted" IsChecked="{Binding IsDeletedChecked, Mode=TwoWay}" Foreground="White" Margin="0,0,16,4"/>
            <CheckBox Content="Renamed" IsChecked="{Binding IsRenamedChecked, Mode=TwoWay}" Foreground="White" Margin="0,0,0,4"/>
        </WrapPanel>
        
        <!-- Debounce -->
        <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{local:Localize Automation_Trigger_Debounce}" Foreground="#999999" FontSize="11" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox Text="{Binding DebounceMsec, UpdateSourceTrigger=PropertyChanged}" 
                         Width="80" Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"/>
                <TextBlock Text="ms" Foreground="#999999" VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
