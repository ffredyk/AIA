<UserControl x:Class="AIA.Views.Automation.WindowContextTriggerConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AIA"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="400">
    <StackPanel>
        <!-- Window Title Filter -->
        <TextBlock Text="{local:Localize Automation_Trigger_WindowTitle}" Foreground="#999999" FontSize="11" Margin="0,8,0,4"/>
        <TextBox Text="{Binding WindowTitleFilter, UpdateSourceTrigger=PropertyChanged}"
                 Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"
                 ToolTip="Keywords or regex pattern to match window title"/>
        
        <!-- Process Name Filter -->
        <TextBlock Text="{local:Localize Automation_Trigger_ProcessName}" Foreground="#999999" FontSize="11" Margin="0,12,0,4"/>
        <TextBox Text="{Binding ProcessNameFilter, UpdateSourceTrigger=PropertyChanged}"
                 Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"
                 ToolTip="Process name like chrome, notepad, etc."/>
        
        <!-- Options -->
        <StackPanel Margin="0,12,0,0">
            <CheckBox Content="{local:Localize Automation_Trigger_UseRegex}" 
                      IsChecked="{Binding UseRegex, Mode=TwoWay}"
                      Foreground="White" Margin="0,0,0,8"/>
            <CheckBox Content="{local:Localize Automation_Trigger_TriggerOnMatch}" 
                      IsChecked="{Binding TriggerOnMatch, Mode=TwoWay}"
                      Foreground="White"
                      ToolTip="When unchecked, triggers when the filter does NOT match"/>
        </StackPanel>
        
        <!-- Debounce -->
        <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{local:Localize Automation_Trigger_Debounce}" Foreground="#999999" FontSize="11" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox Text="{Binding DebounceMsec, UpdateSourceTrigger=PropertyChanged}" 
                         Width="80" Background="#2D2D30" Foreground="White" BorderBrush="#555555" Padding="8"/>
                <TextBlock Text="ms" Foreground="#999999" VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
