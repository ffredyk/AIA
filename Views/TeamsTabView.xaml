<UserControl x:Class="AIA.Views.TeamsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AIA.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="350"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- Meetings Panel -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header with Refresh -->
            <Grid Margin="8,8,8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Today's Meetings" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                    <TextBlock Text="{Binding TeamsStatusMessage}" Foreground="#999999" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
                <ui:Button Grid.Column="1" Padding="6,4" Margin="0,0,4,0" Background="Transparent" Click="BtnOpenTeams"
                           ToolTip="Open Microsoft Teams">
                    <ui:SymbolIcon Symbol="Chat20" Foreground="#5B5FC7" FontSize="14"/>
                </ui:Button>
                <ui:Button Grid.Column="2" Padding="6,4" Background="Transparent" Click="BtnRefreshTeams">
                    <ui:Button.Style>
                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoadingTeamsData}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="ArrowSync12" Foreground="White" FontSize="12"/>
                        <TextBlock Margin="4,0,0,0" Text="Refresh" Foreground="White" FontSize="11"/>
                    </StackPanel>
                </ui:Button>
            </Grid>
            
            <!-- Loading Indicator -->
            <Border Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding IsLoadingTeamsData, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <ui:SymbolIcon Symbol="ArrowSync20" FontSize="32" Foreground="#666666"/>
                    <TextBlock Text="Loading Teams data..." Foreground="#666666" FontSize="12" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Teams Not Available -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding IsTeamsAvailable, Converter={StaticResource InverseBoolToVis}}">
                <ui:SymbolIcon Symbol="PeopleTeamDelete20" FontSize="48" Foreground="#666666"/>
                <TextBlock Text="Teams/Calendar not available" Foreground="#666666" FontSize="14" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                <TextBlock Text="Make sure Microsoft Outlook calendar is configured" Foreground="#555555" FontSize="11" Margin="0,4,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Meetings & Messages Lists -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8,0,8,8"
                          Visibility="{Binding IsTeamsAvailable, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <!-- Meetings Section -->
                    <TextBlock Text="MEETINGS" Foreground="#666666" FontSize="10" FontWeight="SemiBold" Margin="0,8,0,4"/>
                    
                    <ItemsControl ItemsSource="{Binding TodaysMeetings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4" CornerRadius="8" BorderBrush="#335B5FC7" BorderThickness="1"
                                        MouseLeftButtonUp="TeamsMeetingItem_Click" Tag="{Binding}" Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#0C5B5FC7"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#195B5FC7"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsOngoing}" Value="True">
                                                    <Setter Property="Background" Value="#335B5FC7"/>
                                                    <Setter Property="BorderBrush" Value="#5B5FC7"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Margin="10,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Time Column -->
                                        <Border Width="50" Height="50" CornerRadius="6" Background="#19FFFFFF" Margin="0,0,12,0">
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding StartTime, StringFormat='HH:mm'}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding DurationText}" Foreground="#999999" FontSize="10"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Meeting Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Subject}" FontWeight="SemiBold" Foreground="White" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Foreground="#CCCCCC" FontSize="11" Margin="0,4,0,0" TextTrimming="CharacterEllipsis">
                                                <Run Text="{Binding OrganizerName}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding TimeUntilText}" FontSize="11" Margin="0,4,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#999999"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsOngoing}" Value="True">
                                                                <Setter Property="Foreground" Value="#1EB75F"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsStartingSoon}" Value="True">
                                                                <Setter Property="Foreground" Value="#FFA500"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <!-- Join Button -->
                                        <ui:Button Grid.Column="2" Padding="8,4" Background="#5B5FC7" CornerRadius="4"
                                                   Click="BtnJoinTeamsMeeting" Tag="{Binding}"
                                                   Visibility="{Binding HasJoinUrl, Converter={StaticResource BoolToVis}}">
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon Symbol="Video16" Foreground="White" FontSize="12"/>
                                                <TextBlock Text="Join" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </ui:Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- No Meetings -->
                    <Border Padding="20" Margin="0,4"
                            Visibility="{Binding TodaysMeetings.Count, Converter={StaticResource IntToVisConverter}, ConverterParameter=Inverse}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoadingTeamsData}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="CalendarEmpty20" FontSize="24" Foreground="#666666" HorizontalAlignment="Center"/>
                            <TextBlock Text="No meetings today" Foreground="#666666" FontSize="11" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Messages Section -->
                    <TextBlock Text="UNREAD MESSAGES" Foreground="#666666" FontSize="10" FontWeight="SemiBold" Margin="0,16,0,4"/>
                    
                    <ItemsControl ItemsSource="{Binding UnreadMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4" CornerRadius="8" BorderBrush="#33FFFFFF" BorderThickness="1"
                                        MouseLeftButtonUp="TeamsMessageItem_Click" Tag="{Binding}" Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#0CFFFFFF"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#19FFFFFF"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                    <Setter Property="Background" Value="#195B5FC7"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Margin="10,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Sender Avatar -->
                                        <Border Width="36" Height="36" CornerRadius="18" Background="#335B5FC7" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding SenderInitials}" Foreground="White" FontWeight="SemiBold" 
                                                       FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- Message Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding SenderName}" FontWeight="SemiBold" Foreground="White" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1" Text="{Binding ChannelName}" Foreground="#5B5FC7" FontSize="10" 
                                                           Margin="8,0,0,0" VerticalAlignment="Center"/>
                                            </Grid>
                                            <TextBlock Text="{Binding Preview}" Foreground="#AAAAAA" FontSize="11" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Time -->
                                        <TextBlock Grid.Column="2" Text="{Binding ReceivedTimeText}" Foreground="#999999" FontSize="10" 
                                                   VerticalAlignment="Top" Margin="8,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- No Messages -->
                    <Border Padding="20" Margin="0,4"
                            Visibility="{Binding UnreadMessages.Count, Converter={StaticResource IntToVisConverter}, ConverterParameter=Inverse}">
                        <StackPanel HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="ChatEmpty20" FontSize="24" Foreground="#666666"/>
                            <TextBlock Text="No unread messages" Foreground="#666666" FontSize="11" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Reminders Section -->
                    <TextBlock Text="REMINDERS" Foreground="#666666" FontSize="10" FontWeight="SemiBold" Margin="0,16,0,4"
                               Visibility="{Binding TeamsReminders.Count, Converter={StaticResource IntToVisConverter}}"/>
                    
                    <ItemsControl ItemsSource="{Binding TeamsReminders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4" CornerRadius="8" BorderBrush="#33FFA500" BorderThickness="1" Background="#0CFFA500">
                                    <Grid Margin="10,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Bell Icon -->
                                        <ui:SymbolIcon Symbol="Alert16" Foreground="#FFA500" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        
                                        <!-- Reminder Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" Foreground="White" FontSize="12" TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                <Setter Property="Opacity" Value="0.6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding DueDateText}" Foreground="#999999" FontSize="10" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- Complete Button -->
                                        <ui:Button Grid.Column="2" Padding="4" Background="Transparent" 
                                                   Click="BtnCompleteTeamsReminder" Tag="{Binding}">
                                            <ui:SymbolIcon FontSize="14">
                                                <ui:SymbolIcon.Style>
                                                    <Style TargetType="ui:SymbolIcon">
                                                        <Setter Property="Symbol" Value="Circle12"/>
                                                        <Setter Property="Foreground" Value="#999999"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                <Setter Property="Symbol" Value="CheckmarkCircle12"/>
                                                                <Setter Property="Foreground" Value="#1EB75F"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ui:SymbolIcon.Style>
                                            </ui:SymbolIcon>
                                        </ui:Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="4" Background="#33FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
        
        <!-- Meeting/Message Details Panel -->
        <Border Grid.Column="2" Margin="8" CornerRadius="8" Background="#0CFFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1">
            <Grid>
                <!-- No Selection -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasSelectedTeamsMeeting}" Value="False"/>
                                        <Condition Binding="{Binding HasSelectedTeamsMessage}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <ui:SymbolIcon Symbol="PeopleTeam20" FontSize="48" Foreground="#666666"/>
                    <TextBlock Text="Select a meeting or message" Foreground="#666666" Margin="0,12,0,0" FontSize="14"/>
                </StackPanel>
                
                <!-- Meeting Details -->
                <ScrollViewer Visibility="{Binding HasSelectedTeamsMeeting, Converter={StaticResource BoolToVis}}"
                              VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel DataContext="{Binding SelectedTeamsMeeting}">
                        <!-- Meeting Subject -->
                        <TextBlock Text="{Binding Subject}" FontSize="20" FontWeight="SemiBold" Foreground="White" TextWrapping="Wrap"/>
                        
                        <!-- Time Info -->
                        <Border Margin="0,16,0,0" Padding="12,10" CornerRadius="6" Background="#195B5FC7">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ui:SymbolIcon Symbol="Clock16" Foreground="White" FontSize="14" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Foreground="White" FontSize="14">
                                        <Run Text="{Binding StartTime, StringFormat='HH:mm'}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding EndTime, StringFormat='HH:mm'}"/>
                                        <Run Text=" ("/>
                                        <Run Text="{Binding DurationText}"/>
                                        <Run Text=")"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding TimeUntilText}" Foreground="#CCCCCC" FontSize="12" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Organizer -->
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Organizer" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="32" Height="32" CornerRadius="16" Background="#335B5FC7" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding OrganizerInitials}" Foreground="White" FontWeight="SemiBold" 
                                               FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding OrganizerName}" Foreground="White" FontSize="13"/>
                                    <TextBlock Text="{Binding OrganizerEmail}" Foreground="#999999" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Location -->
                        <StackPanel Margin="0,16,0,0" Visibility="{Binding Location, Converter={StaticResource NullToVis}}">
                            <TextBlock Text="Location" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Location}" Foreground="White" FontSize="13"/>
                        </StackPanel>
                        
                        <!-- Description -->
                        <StackPanel Margin="0,16,0,0" Visibility="{Binding Description, Converter={StaticResource NullToVis}}">
                            <TextBlock Text="Description" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Description}" Foreground="#DDDDDD" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                        </StackPanel>
                        
                        <!-- Join Button -->
                        <ui:Button Margin="0,24,0,0" Padding="16,10" Background="#5B5FC7" CornerRadius="6"
                                   HorizontalAlignment="Stretch"
                                   Click="BtnJoinTeamsMeeting" Tag="{Binding}"
                                   Visibility="{Binding HasJoinUrl, Converter={StaticResource BoolToVis}}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <ui:SymbolIcon Symbol="Video20" Foreground="White" FontSize="16"/>
                                <TextBlock Text="Join Meeting" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:Button>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Message Details -->
                <ScrollViewer Visibility="{Binding HasSelectedTeamsMessage, Converter={StaticResource BoolToVis}}"
                              VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel DataContext="{Binding SelectedTeamsMessage}">
                        <!-- Sender Info -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="48" Height="48" CornerRadius="24" Background="#335B5FC7" Margin="0,0,12,0">
                                <TextBlock Text="{Binding SenderInitials}" Foreground="White" FontWeight="SemiBold" 
                                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SenderName}" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                                <TextBlock Text="{Binding ChannelName}" Foreground="#5B5FC7" FontSize="12" Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="2" Text="{Binding ReceivedTime, StringFormat='HH:mm'}" 
                                       Foreground="#999999" FontSize="12" VerticalAlignment="Top"/>
                        </Grid>
                        
                        <!-- Message Content -->
                        <Border Margin="0,16,0,0" Padding="12" CornerRadius="8" Background="#19FFFFFF">
                            <TextBlock Text="{Binding Content}" Foreground="#EEEEEE" FontSize="14" TextWrapping="Wrap" LineHeight="22"/>
                        </Border>
                        
                        <!-- Timestamp -->
                        <TextBlock Margin="0,8,0,0" Foreground="#666666" FontSize="11">
                            <Run Text="Received: "/>
                            <Run Text="{Binding ReceivedTime, StringFormat='MMM dd, yyyy HH:mm'}"/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
