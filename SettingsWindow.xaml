<Window x:Class="AIA.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AIA"
        xmlns:models="clr-namespace:AIA.Models"
        mc:Ignorable="d"
        Title="{local:Localize Settings_Title}" 
        Height="750" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:HexColorConverter x:Key="ColorConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Settings20" FontSize="24" Foreground="#0078D4" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{local:Localize Settings_Title}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="{local:Localize Settings_ConfigurePreferences}" Foreground="#999999" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="8" Background="Transparent">
            
            <!-- General Tab -->
            <TabItem Header="{local:Localize Settings_General}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <!-- Language Section -->
                        <TextBlock Text="{local:Localize Settings_Language}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_Language}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_LanguageDescription}" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <ComboBox x:Name="CmbLanguage" Grid.Column="1" Width="150" VerticalAlignment="Center"
                                          Background="#3E3E42" Foreground="White" BorderBrush="#555555"
                                          SelectionChanged="CmbLanguage_SelectionChanged">
                                    <ComboBoxItem Content="English" Tag="en"/>
                                    <ComboBoxItem Content="Czech" Tag="cs-CZ"/>
                                    <ComboBoxItem Content="Deutsch" Tag="de-DE"/>
                                </ComboBox>
                            </Grid>
                        </Border>
                        
                        <!-- Startup Section -->
                        <TextBlock Text="{local:Localize Settings_Startup}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_RunOnStartup}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_RunOnStartupDesc}" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkRunOnStartup" Grid.Column="1" VerticalAlignment="Center"
                                          Checked="ChkRunOnStartup_Changed" Unchecked="ChkRunOnStartup_Changed"/>
                            </Grid>
                        </Border>
                        
                        <!-- Overlay Shortcut -->
                        <TextBlock Text="{local:Localize Settings_OverlayShortcut}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{local:Localize Settings_ShortcutDescription}" Foreground="#999999" FontSize="11" Margin="0,0,0,8"/>
                                
                                <!-- Interactive Hotkey Capture -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Hotkey Display Box (using TextBox like automation trigger) -->
                                    <TextBox x:Name="HotkeyTextBox" 
                                             IsReadOnly="True"
                                             Background="#3E3E42" 
                                             Foreground="White"
                                             BorderBrush="#555555" 
                                             BorderThickness="1" 
                                             Padding="12,8"
                                             FontSize="14"
                                             FontWeight="SemiBold"
                                             Cursor="Hand"
                                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                                             PreviewKeyUp="HotkeyTextBox_PreviewKeyUp"
                                             GotFocus="HotkeyTextBox_GotFocus"
                                             LostFocus="HotkeyTextBox_LostFocus"
                                             ToolTip="{local:Localize Settings_ClickToCapture}">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="#0078D4"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    
                                    <!-- Clear Button -->
                                    <ui:Button Grid.Column="1" 
                                               Margin="8,0,0,0" 
                                               Padding="10,6" 
                                               ToolTip="{local:Localize Settings_ClearHotkey}"
                                               Click="BtnClearHotkey_Click">
                                        <ui:SymbolIcon Symbol="Dismiss20" Foreground="White" FontSize="14"/>
                                    </ui:Button>
                                    
                                    <!-- Reset to Default Button -->
                                    <ui:Button Grid.Column="2" 
                                               Margin="4,0,0,0" 
                                               Padding="10,6" 
                                               ToolTip="{local:Localize Settings_ResetToDefault}"
                                               Click="BtnResetHotkey_Click">
                                        <ui:SymbolIcon Symbol="ArrowReset20" Foreground="White" FontSize="14"/>
                                    </ui:Button>
                                    
                                    <!-- Apply Button (Hidden but kept for manual apply if needed) -->
                                    <ui:Button Grid.Column="3" 
                                               Margin="4,0,0,0" 
                                               Padding="12,6" 
                                               Click="BtnApplyShortcut_Click"
                                               x:Name="BtnApplyHotkey"
                                               Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Checkmark20" Foreground="White" FontSize="14"/>
                                            <TextBlock Text="{local:Localize Settings_Apply}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </ui:Button>
                                </Grid>
                                
                                <!-- Instructions -->
                                <TextBlock Text="{local:Localize Settings_ClickToCapture}" 
                                           Foreground="#666666" FontSize="10" Margin="0,8,0,0"/>
                                
                                <!-- Status Message -->
                                <TextBlock x:Name="TxtShortcutStatus" 
                                           Foreground="#999999" 
                                           FontSize="11" 
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Overlay Opacity Section -->
                        <TextBlock Text="{local:Localize Settings_OverlayOpacity}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{local:Localize Settings_OverlayOpacityDescription}" Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" x:Name="TxtOpacityValue" Text="100%" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                </Grid>
                                <Slider x:Name="SldrOverlayOpacity" Minimum="0.1" Maximum="1.0" Value="1.0" SmallChange="0.05" LargeChange="0.1" IsSnapToTickEnabled="True" TickFrequency="0.05" TickPlacement="BottomRight" Height="24" Foreground="#0078D4" ValueChanged="SldrOverlayOpacity_ValueChanged"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Behavior Section -->
                        <TextBlock Text="{local:Localize Settings_Behavior}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_MinimizeToTray}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_MinimizeToTrayDesc}" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkMinimizeToTray" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <!-- Updates Section -->
                        <TextBlock Text="{local:Localize Settings_Updates}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_CheckForUpdates}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_CheckForUpdatesDesc}" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkCheckUpdates" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_AutoInstallUpdates}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_AutoInstallUpdatesDesc}" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkAutoInstallUpdates" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <ui:Button Margin="0,8,0,0" Padding="12,8" Click="BtnCheckForUpdates_Click">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowSync20" Foreground="White" FontSize="14"/>
                                <TextBlock Text="{local:Localize Settings_CheckForUpdatesNow}" Foreground="White" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:Button>
                        
                        <!-- Clipboard History Section -->
                        <TextBlock Text="{local:Localize Settings_ClipboardHistory}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_EnableClipboardHistory}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_EnableClipboardHistoryDesc}" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkEnableClipboardHistory" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_TrackClipboardText}" Foreground="White" VerticalAlignment="Center"/>
                                <CheckBox x:Name="ChkTrackClipboardText" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_TrackClipboardImages}" Foreground="White" VerticalAlignment="Center"/>
                                <CheckBox x:Name="ChkTrackClipboardImages" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_TrackClipboardFiles}" Foreground="White" VerticalAlignment="Center"/>
                                <CheckBox x:Name="ChkTrackClipboardFiles" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Margin="0,0,8,0">
                                <TextBlock Text="{local:Localize Settings_MaxClipboardItems}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox x:Name="TxtMaxClipboardItems" Text="50"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                            

                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="{local:Localize Settings_MaxClipboardItemSize}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox x:Name="TxtMaxClipboardItemSize" Text="1024"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                        </Grid>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Plugins Tab -->
            <TabItem Header="{local:Localize Settings_Plugins}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Plugin Global Settings -->
                    <Border Grid.Row="0" Margin="16,16,16,8" Padding="12" CornerRadius="6" Background="#2D2D30">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_EnablePluginSystem}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_EnablePluginSystemDesc}" 
                                               Foreground="#999999" FontSize="11"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkEnablePlugins" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                            
                            <Grid Margin="0,8,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_CheckPluginUpdates}" Foreground="White"/>
                                <CheckBox x:Name="ChkCheckPluginUpdates" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_AutoUpdatePlugins}" Foreground="White"/>
                                <CheckBox x:Name="ChkAutoUpdatePlugins" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Installed Plugins List -->
                    <Border Grid.Row="1" Margin="16,8,16,16" CornerRadius="6" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Border Background="#333337" Padding="12,8" CornerRadius="6,6,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{local:Localize Settings_InstalledPlugins}" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <ui:Button Grid.Column="1" Padding="8,4" Click="BtnRefreshPlugins_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="ArrowSync12" Foreground="White" FontSize="12"/>
                                            <TextBlock Text="{local:Localize Common_Refresh}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </ui:Button>
                                </Grid>
                            </Border>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                                <ItemsControl x:Name="PluginsListControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="4" Padding="12" CornerRadius="6" Background="#3E3E42">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Plugin Icon -->
                                                    <Border Width="40" Height="40" CornerRadius="8" Background="#4E4E52" Margin="0,0,12,0">
                                                        <ui:SymbolIcon Symbol="PuzzlePiece20" Foreground="#0078D4" FontSize="18"/>
                                                    </Border>
                                                    
                                                    <!-- Plugin Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                                            <TextBlock Text="{Binding Version, StringFormat=' v{0}'}" Foreground="#666666" FontSize="11" VerticalAlignment="Bottom" Margin="4,0,0,1"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Description}" Foreground="#999999" FontSize="11" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                            <Border Padding="4,1" CornerRadius="3" Margin="0,0,4,0">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Background" Value="#331EB75F"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                                                <Setter Property="Background" Value="#33808080"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock FontSize="9">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Text" Value="{local:Localize Settings_PluginEnabled}"/>
                                                                            <Setter Property="Foreground" Value="#1EB75F"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                                                    <Setter Property="Text" Value="{local:Localize Settings_PluginDisabled}"/>
                                                                                    <Setter Property="Foreground" Value="#808080"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Border>
                                                            <Border Padding="4,1" CornerRadius="3" Background="#330078D4"
                                                                    Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVis}}">
                                                                <TextBlock Text="{local:Localize Settings_BuiltIn}" FontSize="9" Foreground="#0078D4"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    
                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <ui:Button Padding="8,6" Margin="0,0,4,0" ToolTip="{local:Localize Settings_ConfigurePermissions}"
                                                                   Click="BtnPluginPermissions_Click" Tag="{Binding}">
                                                            <ui:SymbolIcon Symbol="Shield20" Foreground="White" FontSize="14"/>
                                                        </ui:Button>
                                                        <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" ToolTip="{local:Localize Settings_EnableDisable}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <!-- Empty State -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                        x:Name="PluginsEmptyState" Visibility="Collapsed">
                                <ui:SymbolIcon Symbol="PuzzlePiece20" FontSize="48" Foreground="#666666"/>
                                <TextBlock Text="{local:Localize Settings_NoPluginsInstalled}" Foreground="#666666" Margin="0,12,0,0" FontSize="14"/>
                                <TextBlock Text="{local:Localize Settings_PlacePluginDlls}" Foreground="#555555" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Chat Templates Tab -->
            <TabItem Header="{local:Localize Settings_ChatTemplates}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header with Add Button -->
                    <Border Grid.Row="0" Margin="16,16,16,8" Padding="12" CornerRadius="6" Background="#2D2D30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="{local:Localize Settings_ManageChatTemplates}" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text="{local:Localize Settings_ChatTemplatesDescription}" Foreground="#999999" FontSize="11"/>
                            </StackPanel>
                            <ui:Button Grid.Column="1" Padding="12,8" Click="BtnAddTemplate_Click">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Add12" Foreground="White" FontSize="12"/>
                                    <TextBlock Text="{local:Localize Common_Add}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                </StackPanel>
                            </ui:Button>
                        </Grid>
                    </Border>
                    
                    <!-- Templates List -->
                    <Border Grid.Row="1" Margin="16,8,16,16" CornerRadius="6" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1">
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                                <ItemsControl x:Name="ChatTemplatesControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="4" Padding="12" CornerRadius="6" Background="#3E3E42">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Icon Preview -->
                                                    <Border Width="48" Height="48" CornerRadius="8" Margin="0,0,12,0">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="{Binding Color, Converter={StaticResource ColorConverter}}" Opacity="0.2"/>
                                                        </Border.Background>
                                                        <ui:SymbolIcon Symbol="{Binding Icon}" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                            <ui:SymbolIcon.Foreground>
                                                                <SolidColorBrush Color="{Binding Color, Converter={StaticResource ColorConverter}}"/>
                                                            </ui:SymbolIcon.Foreground>
                                                        </ui:SymbolIcon>
                                                    </Border>
                                                    
                                                    <!-- Template Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                                            <Border Padding="4,1" CornerRadius="3" Background="#330078D4" Margin="8,0,0,0"
                                                                    Visibility="{Binding IsPredefined, Converter={StaticResource BoolToVis}}">
                                                                <TextBlock Text="{local:Localize Settings_Predefined}" FontSize="9" Foreground="#0078D4"/>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Description}" Foreground="#999999" FontSize="11" Margin="0,2,0,0"/>
                                                        <TextBlock Text="{Binding Message}" Foreground="#666666" FontSize="10" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" MaxWidth="400" HorizontalAlignment="Left"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Move Buttons -->
                                                    <StackPanel Grid.Column="2" Orientation="Vertical" Margin="8,0,8,0" VerticalAlignment="Center">
                                                        <ui:Button Padding="4" Margin="0,0,0,2" ToolTip="{local:Localize Common_MoveUp}" Click="BtnMoveTemplateUp_Click" Tag="{Binding}">
                                                            <ui:SymbolIcon Symbol="ChevronUp12" Foreground="White" FontSize="10"/>
                                                        </ui:Button>
                                                        <ui:Button Padding="4" ToolTip="{local:Localize Common_MoveDown}" Click="BtnMoveTemplateDown_Click" Tag="{Binding}">
                                                            <ui:SymbolIcon Symbol="ChevronDown12" Foreground="White" FontSize="10"/>
                                                        </ui:Button>
                                                    </StackPanel>
                                                    
                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <ui:Button Padding="8,6" Margin="0,0,4,0" ToolTip="{local:Localize Common_Edit}" Click="BtnEditTemplate_Click" Tag="{Binding}">
                                                            <ui:SymbolIcon Symbol="Edit20" Foreground="White" FontSize="14"/>
                                                        </ui:Button>
                                                        <ui:Button Padding="8,6" Margin="0,0,4,0" ToolTip="{local:Localize Common_Delete}" Click="BtnDeleteTemplate_Click" Tag="{Binding}">
                                                            <ui:SymbolIcon Symbol="Delete20" Foreground="#FF4444" FontSize="14"/>
                                                        </ui:Button>
                                                        <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" ToolTip="{local:Localize Settings_EnableDisable}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <!-- Empty State -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="ChatTemplatesEmptyState" Visibility="Collapsed">
                                <ui:SymbolIcon Symbol="ChatSparkle20" FontSize="48" Foreground="#666666"/>
                                <TextBlock Text="{local:Localize Settings_NoTemplates}" Foreground="#666666" Margin="0,12,0,0" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Notifications Tab -->
            <TabItem Header="{local:Localize Settings_Notifications}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <TextBlock Text="{local:Localize Settings_ReminderNotifications}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_EnableNotifications}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_EnableNotificationsDesc}" 
                                               Foreground="#999999" FontSize="11"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkNotificationsEnabled" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_ShowWarningNotifications}" Foreground="White"/>
                                <CheckBox x:Name="ChkWarningNotifications" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_ShowUrgentNotifications}" Foreground="White"/>
                                <CheckBox x:Name="ChkUrgentNotifications" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_ShowOverdueNotifications}" Foreground="White"/>
                                <CheckBox x:Name="ChkOverdueNotifications" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{local:Localize Settings_PlayNotificationSound}" Foreground="White"/>
                                <CheckBox x:Name="ChkPlaySound" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <TextBlock Text="{local:Localize Settings_Timing}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{local:Localize Settings_WarningMinutes}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtWarningMinutes" Text="60"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{local:Localize Settings_UrgentMinutes}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtUrgentMinutes" Text="15"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{local:Localize Settings_NotificationDuration}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtNotificationDuration" Text="10"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Data Tab -->
            <TabItem Header="{local:Localize Settings_Data}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <TextBlock Text="{local:Localize Settings_DataLocation}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{local:Localize Settings_DataStorageFolder}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtDataPath" IsReadOnly="True"
                                             Background="#3E3E42" Foreground="#AAAAAA" BorderBrush="#555555" Padding="8"/>
                                    <ui:Button Grid.Column="1" Margin="8,0,0,0" Padding="12,6" Click="BtnOpenDataFolder_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="FolderOpen20" Foreground="White" FontSize="14"/>
                                            <TextBlock Text="{local:Localize Settings_Open}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </ui:Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="{local:Localize Settings_Backup}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{local:Localize Settings_EnableAutoBackups}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{local:Localize Settings_EnableAutoBackupsDesc}" 
                                               Foreground="#999999" FontSize="11"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkAutoBackup" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Margin="0,0,8,0">
                                <TextBlock Text="{local:Localize Settings_BackupIntervalHours}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox x:Name="TxtBackupInterval" Text="24"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                            

                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="{local:Localize Settings_MaxBackupsToKeep}" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox x:Name="TxtMaxBackups" Text="5"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <ui:Button Padding="12,8" Click="BtnBackupNow_Click">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="ArrowDownload20" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="{local:Localize Settings_BackupNow}" Foreground="White" Margin="8,0,0,0"/>
                                </StackPanel>
                            </ui:Button>
                            <ui:Button Padding="12,8" Margin="8,0,0,0" Click="BtnOpenBackupFolder_Click">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="FolderOpen20" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="{local:Localize Settings_OpenBackups}" Foreground="White" Margin="8,0,0,0"/>
                                </StackPanel>
                            </ui:Button>
                        </StackPanel>
                        
                        <!-- Backup List -->
                        <TextBlock Text="{local:Localize Settings_RecentBackups}" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,8"/>
                        
                        <Border CornerRadius="6" Background="#2D2D30" MaxHeight="150">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="BackupsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10,6" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ui:SymbolIcon Symbol="Archive20" Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding}" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- About Tab -->
            <TabItem Header="{local:Localize Settings_About}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <!-- App Info -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border Width="64" Height="64" CornerRadius="12" Background="#0078D4" Margin="0,0,16,0">
                                <TextBlock Text="AIA" FontSize="24" FontWeight="Bold" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="AIA - AI Assistant" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock x:Name="TxtAppVersion" Text="Version 1.0.0" Foreground="#999999" FontSize="12" Margin="0,4,0,0"/>
                                <TextBlock Text="Personal productivity overlay with AI assistance" Foreground="#666666" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Links -->
                        <TextBlock Text="{local:Localize Settings_Links}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8" Cursor="Hand"
                                MouseLeftButtonUp="BtnGitHub_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:SymbolIcon Symbol="Link20" Foreground="#0078D4" FontSize="16" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{local:Localize Settings_GitHubRepository}" Foreground="White"/>
                                    <TextBlock Text="https://github.com/ffredyk/AIA" Foreground="#666666" FontSize="11"/>
                                </StackPanel>
                                <ui:SymbolIcon Grid.Column="2" Symbol="Open20" Foreground="#666666" FontSize="14"/>
                            </Grid>
                        </Border>
                        
                        <!-- System Info -->
                        <TextBlock Text="{local:Localize Settings_SystemInformation}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12" CornerRadius="6" Background="#2D2D30">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{local:Localize Settings_ApplicationPath}" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtAppPath" Grid.Column="1" Foreground="#AAAAAA" FontSize="11" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{local:Localize Settings_PluginsDirectory}" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtPluginsPath" Grid.Column="1" Foreground="#AAAAAA" FontSize="11" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{local:Localize Settings_DotNetVersion}" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtDotNetVersion" Grid.Column="1" Foreground="#AAAAAA" FontSize="11"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{local:Localize Settings_LoadedPlugins}" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtPluginCount" Grid.Column="1" Foreground="#AAAAAA" FontSize="11"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Credits -->
                        <TextBlock Text="{local:Localize Settings_Credits}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12" CornerRadius="6" Background="#2D2D30">
                            <StackPanel>
                                <TextBlock Foreground="#AAAAAA" FontSize="11" TextWrapping="Wrap">
                                    <Run Text="{local:Localize Settings_BuiltWith}"/>
                                    <Run Text=" "/>
                                    <Run Text="WPF UI" Foreground="#0078D4"/>
                                    <Run Text=" "/>
                                    <Run Text="{local:Localize Settings_And}"/>
                                    <Run Text=" "/>
                                    <Run Text=".NET 10" Foreground="#0078D4"/>
                                </TextBlock>
                                <TextBlock Text="{local:Localize Settings_Copyright}" Foreground="#666666" FontSize="10" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Foreground="#999999" FontSize="11" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Padding="16,8" Margin="0,0,8,0" Click="BtnSave_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save16" Foreground="White" FontSize="14"/>
                            <TextBlock Text="{local:Localize Common_Save}" Foreground="White" FontWeight="SemiBold" Margin="6,0,0,0"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Padding="16,8" Click="BtnClose_Click">
                        <TextBlock Text="{local:Localize Common_Close}" Foreground="White"/>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
