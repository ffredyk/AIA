<Window x:Class="AIA.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:AIA"
        xmlns:models="clr-namespace:AIA.Models"
        mc:Ignorable="d"
        Title="Settings" 
        Height="750" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Settings20" FontSize="24" Foreground="#0078D4" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Configure application preferences and plugin options" Foreground="#999999" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="8" Background="Transparent">
            
            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <!-- Startup Section -->
                        <TextBlock Text="Startup" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Run on Windows startup" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Start AIA automatically when Windows starts" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkRunOnStartup" Grid.Column="1" VerticalAlignment="Center"
                                          Checked="ChkRunOnStartup_Changed" Unchecked="ChkRunOnStartup_Changed"/>
                            </Grid>
                        </Border>
                        
                        <!-- Overlay Shortcut -->
                        <TextBlock Text="Overlay Shortcut" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Keyboard shortcut to open/close the overlay" Foreground="#999999" FontSize="11" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtOverlayShortcut" 
                                             Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"
                                             Text="Win+Q"/>
                                    <ui:Button Grid.Column="1" Margin="8,0,0,0" Padding="12,6" Click="BtnApplyShortcut_Click">
                                        <TextBlock Text="Apply" Foreground="White" FontSize="11"/>
                                    </ui:Button>
                                </Grid>
                                <TextBlock x:Name="TxtShortcutStatus" Foreground="#999999" FontSize="10" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Behavior Section -->
                        <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Minimize to system tray" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Keep running in background when overlay is closed" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkMinimizeToTray" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <!-- Updates Section -->
                        <TextBlock Text="Updates" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Check for updates on startup" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Automatically check for new versions when the app starts" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkCheckUpdates" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Auto-install updates" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Automatically download and install updates" 
                                               Foreground="#999999" FontSize="11" TextWrapping="Wrap"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkAutoInstallUpdates" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <ui:Button Margin="0,8,0,0" Padding="12,8" Click="BtnCheckForUpdates_Click">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowSync20" Foreground="White" FontSize="14"/>
                                <TextBlock Text="Check for Updates Now" Foreground="White" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:Button>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Plugins Tab -->
            <TabItem Header="Plugins">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Plugin Global Settings -->
                    <Border Grid.Row="0" Margin="16,16,16,8" Padding="12" CornerRadius="6" Background="#2D2D30">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Enable Plugin System" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Allow plugins to extend AIA functionality" 
                                               Foreground="#999999" FontSize="11"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkEnablePlugins" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                            
                            <Grid Margin="0,8,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Check for plugin updates" Foreground="White"/>
                                <CheckBox x:Name="ChkCheckPluginUpdates" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Auto-update plugins" Foreground="White"/>
                                <CheckBox x:Name="ChkAutoUpdatePlugins" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Installed Plugins List -->
                    <Border Grid.Row="1" Margin="16,8,16,16" CornerRadius="6" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Border Background="#333337" Padding="12,8" CornerRadius="6,6,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Installed Plugins" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <ui:Button Grid.Column="1" Padding="8,4" Click="BtnRefreshPlugins_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="ArrowSync12" Foreground="White" FontSize="12"/>
                                            <TextBlock Text="Refresh" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </ui:Button>
                                </Grid>
                            </Border>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                                <ItemsControl x:Name="PluginsListControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="4" Padding="12" CornerRadius="6" Background="#3E3E42">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Plugin Icon -->
                                                    <Border Width="40" Height="40" CornerRadius="8" Background="#4E4E52" Margin="0,0,12,0">
                                                        <ui:SymbolIcon Symbol="PuzzlePiece20" Foreground="#0078D4" FontSize="18"/>
                                                    </Border>
                                                    
                                                    <!-- Plugin Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                                            <TextBlock Text="{Binding Version, StringFormat=' v{0}'}" Foreground="#666666" FontSize="11" VerticalAlignment="Bottom" Margin="4,0,0,1"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Description}" Foreground="#999999" FontSize="11" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                            <Border Padding="4,1" CornerRadius="3" Margin="0,0,4,0">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Background" Value="#331EB75F"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                                                <Setter Property="Background" Value="#33808080"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock FontSize="9">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Text" Value="Enabled"/>
                                                                            <Setter Property="Foreground" Value="#1EB75F"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                                                    <Setter Property="Text" Value="Disabled"/>
                                                                                    <Setter Property="Foreground" Value="#808080"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Border>
                                                            <Border Padding="4,1" CornerRadius="3" Background="#330078D4"
                                                                    Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVis}}">
                                                                <TextBlock Text="Built-in" FontSize="9" Foreground="#0078D4"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    
                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <ui:Button Padding="8,6" Margin="0,0,4,0" ToolTip="Configure permissions"
                                                                   Click="BtnPluginPermissions_Click" Tag="{Binding}">
                                                            <ui:SymbolIcon Symbol="Shield20" Foreground="White" FontSize="14"/>
                                                        </ui:Button>
                                                        <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" ToolTip="Enable/Disable"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <!-- Empty State -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                        x:Name="PluginsEmptyState" Visibility="Collapsed">
                                <ui:SymbolIcon Symbol="PuzzlePiece20" FontSize="48" Foreground="#666666"/>
                                <TextBlock Text="No plugins installed" Foreground="#666666" Margin="0,12,0,0" FontSize="14"/>
                                <TextBlock Text="Place plugin DLLs in the Plugins folder" Foreground="#555555" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Notifications Tab -->
            <TabItem Header="Notifications">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <TextBlock Text="Reminder Notifications" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Enable notifications" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Show popup notifications for reminders" 
                                               Foreground="#999999" FontSize="11"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkNotificationsEnabled" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Show warning notifications" Foreground="White"/>
                                <CheckBox x:Name="ChkWarningNotifications" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Show urgent notifications" Foreground="White"/>
                                <CheckBox x:Name="ChkUrgentNotifications" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Show overdue notifications" Foreground="White"/>
                                <CheckBox x:Name="ChkOverdueNotifications" Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                            </Grid>
                        </Border>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Play notification sound" Foreground="White"/>
                                <CheckBox x:Name="ChkPlaySound" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <TextBlock Text="Timing" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Warning notification (minutes before due)" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtWarningMinutes" Text="60"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Urgent notification (minutes before due)" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtUrgentMinutes" Text="15"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Notification duration (seconds, 0 = until dismissed)" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtNotificationDuration" Text="10"
                                     Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Data Tab -->
            <TabItem Header="Data">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <TextBlock Text="Data Location" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Data storage folder" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtDataPath" IsReadOnly="True"
                                             Background="#3E3E42" Foreground="#AAAAAA" BorderBrush="#555555" Padding="8"/>
                                    <ui:Button Grid.Column="1" Margin="8,0,0,0" Padding="12,6" Click="BtnOpenDataFolder_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="FolderOpen20" Foreground="White" FontSize="14"/>
                                            <TextBlock Text="Open" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </ui:Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="Backup" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Enable automatic backups" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Periodically backup your data" 
                                               Foreground="#999999" FontSize="11"/>
                                </StackPanel>
                                <CheckBox x:Name="ChkAutoBackup" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Margin="0,0,8,0">
                                <TextBlock Text="Backup interval (hours)" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox x:Name="TxtBackupInterval" Text="24"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Maximum backups to keep" Foreground="#999999" FontSize="11" Margin="0,0,0,4"/>
                                <TextBox x:Name="TxtMaxBackups" Text="5"
                                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="8"/>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <ui:Button Padding="12,8" Click="BtnBackupNow_Click">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="ArrowDownload20" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="Backup Now" Foreground="White" Margin="8,0,0,0"/>
                                </StackPanel>
                            </ui:Button>
                            <ui:Button Padding="12,8" Margin="8,0,0,0" Click="BtnOpenBackupFolder_Click">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="FolderOpen20" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="Open Backups" Foreground="White" Margin="8,0,0,0"/>
                                </StackPanel>
                            </ui:Button>
                        </StackPanel>
                        
                        <!-- Backup List -->
                        <TextBlock Text="Recent Backups" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,8"/>
                        
                        <Border CornerRadius="6" Background="#2D2D30" MaxHeight="150">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="BackupsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10,6" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ui:SymbolIcon Symbol="Archive20" Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding}" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- About Tab -->
            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <!-- App Info -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border Width="64" Height="64" CornerRadius="12" Background="#0078D4" Margin="0,0,16,0">
                                <TextBlock Text="AIA" FontSize="24" FontWeight="Bold" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="AIA - AI Assistant" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock x:Name="TxtAppVersion" Text="Version 1.0.0" Foreground="#999999" FontSize="12" Margin="0,4,0,0"/>
                                <TextBlock Text="Personal productivity overlay with AI assistance" Foreground="#666666" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Links -->
                        <TextBlock Text="Links" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Border Padding="12,10" CornerRadius="6" Background="#2D2D30" Margin="0,0,0,8" Cursor="Hand"
                                MouseLeftButtonUp="BtnGitHub_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:SymbolIcon Symbol="Link20" Foreground="#0078D4" FontSize="16" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="GitHub Repository" Foreground="White"/>
                                    <TextBlock Text="https://github.com/ffredyk/AIA" Foreground="#666666" FontSize="11"/>
                                </StackPanel>
                                <ui:SymbolIcon Grid.Column="2" Symbol="Open20" Foreground="#666666" FontSize="14"/>
                            </Grid>
                        </Border>
                        
                        <!-- System Info -->
                        <TextBlock Text="System Information" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12" CornerRadius="6" Background="#2D2D30">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Application Path" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtAppPath" Grid.Column="1" Foreground="#AAAAAA" FontSize="11" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Plugins Directory" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtPluginsPath" Grid.Column="1" Foreground="#AAAAAA" FontSize="11" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text=".NET Version" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtDotNetVersion" Grid.Column="1" Foreground="#AAAAAA" FontSize="11"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Loaded Plugins" Foreground="#999999" FontSize="11"/>
                                    <TextBlock x:Name="TxtPluginCount" Grid.Column="1" Foreground="#AAAAAA" FontSize="11"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Credits -->
                        <TextBlock Text="Credits" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        
                        <Border Padding="12" CornerRadius="6" Background="#2D2D30">
                            <StackPanel>
                                <TextBlock Foreground="#AAAAAA" FontSize="11" TextWrapping="Wrap">
                                    <Run Text="Built with "/>
                                    <Run Text="WPF UI" Foreground="#0078D4"/>
                                    <Run Text=" and "/>
                                    <Run Text=".NET 10" Foreground="#0078D4"/>
                                </TextBlock>
                                <TextBlock Text="(c) 2025 ITHead.cz All rights reserved." Foreground="#666666" FontSize="10" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Foreground="#999999" FontSize="11" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Padding="16,8" Margin="0,0,8,0" Click="BtnSave_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save16" Foreground="White" FontSize="14"/>
                            <TextBlock Text="Save" Foreground="White" FontWeight="SemiBold" Margin="6,0,0,0"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Padding="16,8" Click="BtnClose_Click">
                        <TextBlock Text="Close" Foreground="White"/>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
